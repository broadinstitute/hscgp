<h1>User Whitelist</h1>
<div class="row">
  <div class="col-md-12" id="whitelist-users-target">
    <%= render 'whitelist_user_table' %>
  </div>

  <script type="text/javascript">
    <%= render 'whitelist_user_table_scripts.js' %>
  </script>

  <div class="col-md-offset-3 col-md-6 text-center">
    <%= form_for(:user_whitelist, url: add_user_to_whitelist_path, html: {class: 'form-inline', data: {remote: true}}) do |f| %>
      <div class="form-group">
        <%= f.text_field :email, class: 'form-control', size: 50 %>&nbsp;
        <%= f.submit 'Add Email to Whitelist', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
