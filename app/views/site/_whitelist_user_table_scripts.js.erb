var userTable = $('#whitelist-users').DataTable({
    "order": [[0, 'asc']],
    pagingType: 'full_numbers',
    language: {
        search: "Filter All Results: "
    },
    autoWidth: false,
    ajax: "<%= user_whitelist_path %>"
});

userTable.on('click', '.delete-whitelist-user', function() {
    if ( confirm('Are you sure you want to delete this user from the whitelist?') ) {
        return true;
    } else {
        return false;
    }
});

